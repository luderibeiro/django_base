# Dockerfile otimizado para desenvolvimento
FROM python:3.12-slim-bookworm

LABEL maintainer="@luderibeiro"

# Variáveis de ambiente
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    DJANGO_DEBUG=True \
    DJANGO_SECRET_KEY=dev-secret-key

WORKDIR /app

# Instalar dependências mínimas para desenvolvimento
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
        build-essential \
        libpq-dev \
        git && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

# Copiar requirements e instalar dependências
COPY project/requirements.txt .
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt

# Copiar código do projeto
COPY project/ /app/project/
COPY scripts/ /app/scripts/

# Criar usuário para desenvolvimento
RUN adduser --disabled-password --no-create-home --gecos "" devuser && \
    mkdir -p /app/project/logs /app/data && \
    chown -R devuser:devuser /app && \
    chmod +x /app/scripts/run.sh

EXPOSE 8000

USER devuser

WORKDIR /app/project

CMD ["python", "manage.py", "runserver", "0.0.0.0:8000"]
